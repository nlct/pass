<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  <programGroup defaultName="DickimawBooks\PASS"
                location="startMenu"/>
  <shortcut
    name="PASS GUI"
    target="$JAVA_HOME\bin\javaw.exe"
    commandLine="-splash:&quot;$INSTALL_PATH\lib\icons\pass-splash.png&quot; -jar &quot;$INSTALL_PATH\lib\progassignsys.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="Application to prepare assignment source code for submission"
    iconFile="$INSTALL_PATH\lib\icons\pass-logo.ico"
    iconIndex="2"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="PASS GUI Uninstaller"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
    commandLine=""
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="31"
    description="Uninstall PASS GUI"
    initialState="noShow"
  >

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="PASS GUI Manual"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\lib\manual.html"
    commandLine=""
    encoding="UTF-8"
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="23"
    description="PASS GUI user manual (HTML format)">

    <createForPack name="Base"/>
  </shortcut>

</izpack:shortcuts>
